<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editSmtpHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SMTP主机，例如 smtp.163.com" />

        <EditText
            android:id="@+id/editSmtpPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="SMTP端口，例如 465" />

        <EditText
            android:id="@+id/editSenderEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="发件邮箱（163邮箱）" />

        <EditText
            android:id="@+id/editSenderPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="发件邮箱密码/授权码" />

        <EditText
            android:id="@+id/editRecipientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="收件邮箱（备份接收邮箱）" />

        <EditText
            android:id="@+id/editBackupHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="备份小时（0-23）" />

        <EditText
            android:id="@+id/editBackupMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="备份分钟（0-59）" />

        <Button
            android:id="@+id/btnSaveConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="保存并启用备份" />

    </LinearLayout>
</ScrollView>
