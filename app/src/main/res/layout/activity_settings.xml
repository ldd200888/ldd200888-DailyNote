<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMTP主机"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSmtpHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如 smtp.163.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SMTP端口"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSmtpPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如 465"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="发件邮箱（163邮箱）"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSenderEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="发件邮箱密码/授权码"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSenderPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收件邮箱"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editRecipientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="应用配色风格"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupColorStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioStylePurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="经典紫" />

            <RadioButton
                android:id="@+id/radioStyleBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清新蓝" />

            <RadioButton
                android:id="@+id/radioStyleGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自然绿" />

            <RadioButton
                android:id="@+id/radioStyleOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活力橙" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSaveConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="保存设置" />

    </LinearLayout>
</ScrollView>
