<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMTP主机"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSmtpHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如 smtp.163.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SMTP端口"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSmtpPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如 465"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="发件邮箱（163邮箱）"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSenderEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="发件邮箱密码/授权码"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSenderPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="收件邮箱"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editRecipientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="应用配色风格"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupColorStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioStylePurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="经典紫" />

            <RadioButton
                android:id="@+id/radioStyleBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清新蓝" />

            <RadioButton
                android:id="@+id/radioStyleGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自然绿" />

            <RadioButton
                android:id="@+id/radioStyleOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活力橙" />

            <RadioButton
                android:id="@+id/radioStyleCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义配色（RGB）" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layoutCustomColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/viewColorPreview"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#6750A4" />

            <TextView
                android:id="@+id/textColorValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="RGB(103, 80, 164)" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="R" />

            <SeekBar
                android:id="@+id/seekRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G" />

            <SeekBar
                android:id="@+id/seekGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B" />

            <SeekBar
                android:id="@+id/seekBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="进入应用认证"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBiometricLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启指纹/生物识别认证" />

        <Button
            android:id="@+id/btnSaveConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="保存设置" />

        <Button
            android:id="@+id/btnImportRestore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="导入恢复（选择备份文件）" />

        <TextView
            android:id="@+id/textLocalBackupPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>
